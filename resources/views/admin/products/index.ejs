<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Danh sách sản phẩm</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
        />
        <link
            rel="icon"
            href="/images/favicon_io/favicon.ico"
            type="image/x-icon"
        />
        <style>
            .delete-product {
                font-size: 18px;
            }

            .delete-product i:hover {
                transform: scale(1.1);
                cursor: pointer;
            }
        </style>
    </head>
    <body>
        <%-include('../../partials/header')%>
        <div
            class="product-banner"
            style="
                background-color: rgb(58, 112, 94);
                width: 100%;
                height: 100px;
            "
        ></div>
        <h1 style="width: 100%; text-align: center; margin-top: 50px">
            DANH SÁCH SẢN PHẨM
        </h1>
        <a href="/products/create/admin"
            ><button type="button" class="btn btn-success" style="margin: 20px">
                Tạo sản phẩm mới <i class="fa-solid fa-plus"></i></button
        ></a>
        <table class="table table-success">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Ảnh</th>
                    <th scope="col">Tên sản phẩm</th>
                    <th scope="col">Giá tiền</th>
                    <th scope="col">Thể loại</th>
                    <th colspan="2" scope="col">Mô tả</th>
                </tr>
            </thead>
            <tbody>
                <% for (product of products) { %>
                <tr id="<%=product.id%>">
                    <th scope="row"><%= products.indexOf(product) + 1 %></th>
                    <td style="width: 150px">
                        <div class="right-shared-ingredient-img">
                            <%if(!product.image) {%> Không <%} else {%>
                            <a
                                href="<%=product.image%>"
                                target="_blank"
                                alt="ảnh sản phẩm"
                                >Ảnh</a
                            >
                            <%}%>
                        </div>
                    </td>
                    <td><%= product.name %></td>
                    <td>
                        <%= product.price.toLocaleString("vi", { style:
                        "currency", currency: "VND", }) %>
                    </td>
                    <td><%= product.category %></td>
                    <td><%= product.description %></td>
                    <td class="delete-product">
                        <i
                            title="move to trash"
                            class="fa-solid fa-trash"
                            onClick="handleDelete('<%=product.id%>', '<%= product.name%>')"
                        ></i>
                    </td>
                    <% } %>
                </tr>
            </tbody>
        </table>
        <%if(products.length===0) {%>
        <p style="width: 100%; text-align: center">CHƯA CÓ SẢN PHẨM NÀO.</p>
        <%}%>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"
        ></script>
        <script>
            const handleDelete = (id, name) => {
                Swal.fire({
                    title: `Bạn có chắc chắn muốn xóa sản phẩm ${name}?`,
                    text: 'Hành động này không thể khôi phục!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Xóa',
                    reverseButtons: true,
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/products/admin/${id}`, {
                            method: 'DELETE',
                        })
                            .then(() => {
                                const productDeleted =
                                    document.getElementById(id);
                                productDeleted.remove();
                            })
                            .catch((err) => {
                                // alert('Không thể xóa!!');
                                Swal.fire({
                                    title: 'Lỗi!',
                                    text: 'Không thể xóa sản phẩm',
                                    icon: 'error',
                                    confirmButtonText: 'OK',
                                });
                            });
                        Swal.fire(
                            'Đã xóa!',
                            'Xóa sản phẩm thành công',
                            'success'
                        );
                    }
                });
            };
        </script>
    </body>
</html>
