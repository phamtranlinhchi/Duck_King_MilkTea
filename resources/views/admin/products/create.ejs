<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Tạo sản phẩm</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
        />
        <link
            rel="icon"
            href="/images/favicon_io/favicon.ico"
            type="image/x-icon"
        />
    </head>
    <body>
        <%-include('../../partials/header')%>
        <div
            class="product-banner"
            style="
                background-color: rgb(58, 112, 94);
                width: 100%;
                height: 100px;
            "
        ></div>
        <div
            style="
                width: 100%;
                text-align: left;
                padding-left: 20px;
                margin-top: 20px;
            "
        >
            <a href="/products/admin">
                <i class="fa-solid fa-arrow-left"></i>
                Danh sách sản phẩm
            </a>
        </div>
        <h2 style="width: 100%; text-align: center; margin-top: 40px">
            Tạo sản phẩm
        </h2>
        <div class="col-md-10" style="margin: auto">
            <form
                class="row g-3 needs-validation product-form"
                novalidate
                method="POST"
                action="/products/admin"
            >
                <div class="mb-3">
                    <label for="formFileSm" class="form-label"
                        >Ảnh sản phẩm</label
                    >
                    <input
                        class="form-control form-control-sm"
                        id="formFileSm"
                        type="file"
                        name="image"
                    />
                </div>
                <div class="col-md-4">
                    <label for="validationCustom01" class="form-label"
                        >Tên</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        id="validationCustom01"
                        name="name"
                        required
                    />
                    <div class="invalid-feedback">Cần có tên sản phẩm</div>
                </div>

                <div class="col-md-4">
                    <label for="validationCustom02" class="form-label"
                        >Giá</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        id="validationCustom02"
                        name="price"
                    />
                </div>

                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label"
                        >Thể loại</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        id="validationCustom03"
                        name="category"
                    />
                </div>

                <div class="mb-3">
                    <label for="validationTextarea" class="form-label"
                        >Mô tả</label
                    >
                    <textarea
                        class="form-control"
                        id="validationTextarea"
                        name="description"
                    ></textarea>
                </div>

                <div class="col-12">
                    <button class="btn btn-success" type="submit">Tạo</button>
                </div>
            </form>
        </div>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"
        ></script>

        <script>
            const productForm = document.querySelector('.product-form');

            productForm.addEventListener('submit', async function (e) {
                e.preventDefault();
                //  document
                // .getElementById("btn-create")
                // .addEventListener("click", async () => {
                const name = document.querySelector("[name='name']");
                const price = document.querySelector("[name='price']");
                const category = document.querySelector("[name='category']");
                const description = document.querySelector(
                    "[name='description']"
                );
                const image = document.querySelector("[name='image']");
                const data = new FormData();
                // console.log(documents.files);
                data.append('image', image.files[0]);
                data.append('name', name.value);
                data.append('price', price.value);
                data.append('category', category.value);
                data.append('description', description.value);

                try {
                    let result = await (
                        await fetch('/products/admin', {
                            method: 'POST',
                            body: data,
                        })
                    ).json();
                    // console.log(result);
                    if (!result.name) {
                        Swal.fire({
                            title: 'Lỗi!',
                            text: 'Tạo sản phẩm thất bại!',
                            icon: 'error',
                            confirmButtonText: 'OK',
                        });
                    } else {
                        Swal.fire({
                            title: 'Thành công',
                            text: 'Tạo sản phẩm thành công!',
                            icon: 'success',
                            confirmButtonText: 'OK',
                        });
                        name.value = '';
                        price.value = '';
                        category.value = '';
                        description.value = '';
                        image.value = '';
                    }
                } catch (error) {
                    Swal.fire({
                        title: 'Lỗi!',
                        text: 'Tạo sản phẩm thất bại!',
                        icon: 'error',
                        confirmButtonText: 'OK',
                    });
                }
            });
        </script>
    </body>
</html>
