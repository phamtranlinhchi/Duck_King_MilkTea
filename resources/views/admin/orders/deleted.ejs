<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Danh sách đơn hàng</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
        />
        <link
            rel="icon"
            href="/images/favicon_io/favicon.ico"
            type="image/x-icon"
        />
        <style>
            .delete-order {
                font-size: 18px;
            }

            .delete-order i:hover {
                transform: scale(1.1);
                cursor: pointer;
            }
        </style>
    </head>
    <body>
        <%- include('../../partials/header') %>
        <div
            class="user-banner"
            style="
                background-color: rgb(58, 112, 94);
                width: 100%;
                height: 100px;
            "
        ></div>
        <div
            style="
                width: 100%;
                text-align: left;
                padding-left: 20px;
                margin-top: 20px;
            "
        >
            <a href="/orders/admin">
                <i class="fa-solid fa-arrow-left"></i>
                Danh sách đơn đặt hàng
            </a>
        </div>
        <h1 style="width: 100%; text-align: center; margin: 50px 0">
            DANH SÁCH ĐƠN HÀNG ĐÃ XÓA
        </h1>
        <table class="table table-danger table-responsive">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Địa chỉ</th>
                    <th scope="col">Số ĐT</th>
                    <th scope="col">Khách hàng</th>
                    <th scope="col">Email</th>
                    <th scope="col">Sản phẩm</th>
                    <th scope="col">Size</th>
                    <th scope="col">Số lượng</th>
                    <th scope="col" style="text-align: center">Đơn giá</th>
                    <th scope="col" style="text-align: center">Tổng tiền</th>
                    <th scope="col">Ghi chú</th>
                    <th scope="col" colspan="3">Thời gian xóa</th>
                </tr>
            </thead>
            <tbody>
                <% for (order of orders) { %>
                <tr id="<%=order.id%>">
                    <th scope="row"><%= orders.indexOf(order) + 1 %></th>
                    <td style="overflow-wrap: break-word">
                        <%= order.customer_address %>
                    </td>
                    <td><%= order.phone_number %></td>
                    <td><%= order.user.full_name %></td>
                    <td><%= order.user.email %></td>
                    <td>
                        <%for (product of order.products) {%>
                        <div><%=product.product.name%></div>
                        <% } %>
                    </td>
                    <td style="text-align: center">
                        <%for (product of order.products) {%>
                        <div><%=product.size%></div>
                        <% } %>
                    </td>
                    <td style="text-align: center">
                        <%for (product of order.products) {%>
                        <div><%=product.quantity%></div>
                        <% } %>
                    </td>
                    <td style="text-align: center">
                        <%for (product of order.products) {%>
                        <div>
                            <%if(product.size == 'L') {%>
                            <%product.product.price *= 1.5%> <%}%>
                            <%=product.product.price.toLocaleString("vi", {
                            style: "currency", currency: "VND", })%>
                        </div>
                        <% } %>
                    </td>
                    <td style="text-align: center">
                        <%let total = 0; for (product of order.products) {%>
                        <%total+=product.product.price*product.quantity%> <% }
                        %>
                        <div>
                            <%=total.toLocaleString("vi", { style: "currency",
                            currency: "VND", })%>
                        </div>
                    </td>
                    <td>
                        <%if(!order.note) {%> Không <%} else {%> <%=
                        order.note%> <%}%>
                    </td>
                    <td><%= order.deletedAt.toLocaleString() %></td>
                    <td class="delete-order">
                        <i
                            class="fa-solid fa-trash-can-arrow-up"
                            title="Restore"
                            onClick="handleRestore('<%=order.id%>')"
                        ></i>
                    </td>
                    <td class="delete-order">
                        <i
                            data-bs-toggle="modal"
                            data-bs-target="#exampleModal"
                            title="delete"
                            class="fa-solid fa-trash-can"
                            onClick="handleDelete('<%=order.id%>', '<%= orders.indexOf(order) + 1 %>')"
                        ></i>
                    </td>
                </tr>

                <% } %>
            </tbody>
        </table>
        <%if(orders.length===0) {%>
        <p style="width: 100%; text-align: center">THÙNG RÁC TRỐNG.</p>
        <%}%>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"
        ></script>
        <script>
            const handleDelete = (id, index) => {
                Swal.fire({
                    title: 'Bạn có chắc chắn muốn xóa?',
                    text: 'Hành động này không thể khôi phục!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Xóa',
                    reverseButtons: true,
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/orders/${id}`, {
                            method: 'DELETE',
                        })
                            .then(() => {
                                const orderDeleted =
                                    document.getElementById(id);
                                orderDeleted.remove();
                            })
                            .catch((err) => {
                                // alert('Không thể xóa!!');
                                Swal.fire({
                                    title: 'Lỗi!',
                                    text: 'Không thể xóa!',
                                    icon: 'error',
                                    confirmButtonText: 'OK',
                                });
                            });
                        Swal.fire(
                            'Đã xóa!',
                            'Xóa đơn hàng thành công',
                            'success'
                        );
                    }
                });
            };

            const handleRestore = (id) => {
                fetch(`/orders/trash/${id}/restore`, {
                    method: 'PATCH',
                })
                    .then(() => {
                        const orderDeleted = document.getElementById(id);
                        orderDeleted.remove();
                    })
                    .catch((err) => {
                        // alert('Không thể khôi phục!!');
                        Swal.fire({
                            title: 'Lỗi!',
                            text: 'Không thể khôi phục!',
                            icon: 'error',
                            confirmButtonText: 'OK',
                        });
                    });
            };
        </script>
    </body>
</html>
