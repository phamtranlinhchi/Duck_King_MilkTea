<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Danh sách đơn hàng</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
        />
        <style>
            .delete-order {
                font-size: 18px;
            }

            .delete-order i:hover {
                transform: scale(1.1);
                cursor: pointer;
            }
        </style>
    </head>
    <body>
        <%- include('../../partials/header') %>
        <div
            class="user-banner"
            style="
                background-color: rgb(58, 112, 94);
                width: 100%;
                height: 100px;
            "
        ></div>
        <h1 style="width: 100%; text-align: center; margin: 50px 0">
            DANH SÁCH ĐƠN HÀNG
        </h1>
        <div
            style="
                width: 100%;
                text-align: right;
                padding-right: 20px;
                margin-bottom: 20px;
            "
        >
            <a href="/orders/deleted/admin">
                Đơn hàng đã xóa <i class="fa-solid fa-arrow-right"></i>
            </a>
        </div>
        <table class="table table-striped table-success table-responsive">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Địa chỉ</th>
                    <th scope="col">Số ĐT</th>
                    <th scope="col">Khách hàng</th>
                    <th scope="col">Email</th>
                    <th scope="col">Sản phẩm</th>
                    <th scope="col">Size</th>
                    <th scope="col">Số lượng</th>
                    <th scope="col" colspan="2">Thời gian tạo</th>
                </tr>
            </thead>
            <tbody>
                <% for (order of orders) { %>
                <tr id="<%=order.id%>">
                    <th scope="row"><%= orders.indexOf(order) + 1 %></th>
                    <td style="overflow-wrap: break-word">
                        <%= order.customer_address %>
                    </td>
                    <td><%= order.phone_number %></td>
                    <td><%= order.user.full_name %></td>
                    <td><%= order.user.email %></td>
                    <td>
                        <%for (product of order.products) {%>
                        <div><%=product.product%></div>
                        <% } %>
                    </td>
                    <td style="text-align: center">
                        <%for (product of order.products) {%>
                        <div><%=product.size%></div>
                        <% } %>
                    </td>
                    <td style="text-align: center">
                        <%for (product of order.products) {%>
                        <div><%=product.quantity%></div>
                        <% } %>
                    </td>
                    <td><%= order.createdAt.toLocaleString() %></td>
                    <td class="delete-order">
                        <i
                            title="move to trash"
                            class="fa-solid fa-trash"
                            onClick="handleDelete('<%=order.id%>', '<%= orders.indexOf(order) + 1 %>')"
                        ></i>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
        <%if(orders.length===0) {%>
        <p style="width: 100%; text-align: center">CHƯA CÓ ĐƠN ĐẶT HÀNG NÀO.</p>
        <%}%>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"
        ></script>
        <script>
            const handleDelete = (id, index) => {
                if (confirm(`Chuyển đơn STT ${index} vào thùng rác?`)) {
                    fetch(`/orders/trash/${id}`, {
                        method: 'DELETE',
                    })
                        .then(() => {
                            const orderDeleted = document.getElementById(id);
                            orderDeleted.remove();
                        })
                        .catch((err) => {
                            alert('Không thể xóa!!');
                            console.log(err);
                        });
                }
            };
        </script>
    </body>
</html>
