<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Danh sách đơn hàng</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
        />
        <link
            rel="icon"
            href="/images/favicon_io/favicon.ico"
            type="image/x-icon"
        />
        <style>
            .delete-order {
                font-size: 18px;
            }

            .delete-order i:hover {
                transform: scale(1.1);
                cursor: pointer;
            }
         .xemnote:hover{
                cursor: pointer;
                opacity: 0.8;
            }
        </style>
    </head>
    <body>
        <%- include('../../partials/header') %>
        <div class="user-banner" style="height: 300px; position: relative">
            <div
                class="darklayout"
                style="
                    position: absolute;
                    top: 0;
                    right: 0;
                    bottom: 0;
                    left: 0;
                    background-color: rgba(0, 0, 0, 0.801);
                    z-index: -1;
                "
            ></div>
            <img
                style="
                    position: absolute;
                    top: 0;
                    height: 100%;
                    width: 100%;
                    object-fit: cover;
                    z-index: -2;
                "
                src="/images/myorderbanner.jpeg"
                alt=""
            />
            <h1 style=" width: 100%;
                text-align: center;
                color: var(--topicColor);
                position: absolute;
                top: 200px;">
                DANH SÁCH ĐƠN HÀNG
            </h1>
        </div>
        <div style="
            min-height: 600px;
            background: url('/images/productsbg.png');
            padding-top: 20px;
            padding-bottom: 30px;
        ">
            <div
                style="
                    width: 100%;
                    text-align: right;
                    padding-right: 30px;
                    margin-bottom: 30px;
                "
            >
                <a href="/orders/deleted/admin" style="color: var(--topicColor);">
                    Đơn hàng đã xóa <i class="fa-solid fa-arrow-right"></i>
                </a>
            </div>
            <table class="table table-bordered table-responsive" style="color: var(--topicColor) !important;">
                <thead>
                    <tr>
                        <th scope="col" style="text-align: center;">STT</th>
                        <th scope="col">Địa chỉ</th>
                        <th scope="col">Số ĐT</th>
                        <th scope="col">Khách hàng</th>
                        <th scope="col">Username</th>
                        <th scope="col">Sản phẩm</th>
                        <th scope="col">Size</th>
                        <th scope="col">SL</th>
                        <th scope="col" style="text-align: center">Đơn giá</th>
                        <th scope="col" style="text-align: center">Tổng</th>
                        <th scope="col" style="text-align: center;">Note</th>
                        <th scope="col" colspan="2">Thời gian tạo</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (order of orders) { %>
                    <tr id="<%=order.id%>">
                        <th scope="row" style="text-align: center;"><%= orders.indexOf(order) + 1 %></th>
                        <td style="overflow-wrap: break-word; color: #fff;">
                            <%= order.customer_address %>
                        </td>
                        <td style="color: #fff;"><%= order.phone_number %></td>
                        <%if(!order.user) {%>
                        <td style="color: rgb(190, 189, 189);">*Deleted*</td>
                        <td style="color: rgb(190, 189, 189);">*Deleted*</td>
                        <%} else { %>
                        <td style="color: #fff;"><%= order.user.full_name %></td>
                        <td style="color: #fff;"><%= order.user.username %></td>
                        <%}%>
                        <td style="color: #fff;">
                            <%for (product of order.products) {%>
                            <div><%=product.product.name%></div>
                            <% } %>
                        </td>
                        <td style="text-align: center; color: #fff;">
                            <%for (product of order.products) {%>
                            <div><%=product.size%></div>
                            <% } %>
                        </td>
                        <td style="text-align: center; color: #fff;">
                            <%for (product of order.products) {%>
                            <div><%=product.quantity%></div>
                            <% } %>
                        </td>
                        <td style="text-align: center; color: #fff;">
                            <%for (product of order.products) {%>
                            <div>
                                <%if(product.size == 'L') {%>
                                <%product.product.price *= 1.5%> <%}%>
                                <%=product.product.price.toLocaleString("vi", {
                                style: "currency", currency: "VND", })%>
                            </div>
                            <% } %>
                        </td>
                        <td style="text-align: center; color: #fff;">
                            <%let total = 0; for (product of order.products) {%>
                            <%total+=product.product.price*product.quantity%> <% }
                            %>
                            <div>
                                <%=total.toLocaleString("vi", { style: "currency",
                                currency: "VND", })%>
                            </div>
                        </td>
                        <td>
                            <%if(!order.note) {%>  <%} else {%>
                                <div
                                class="xemnote"
                                data-bs-toggle="modal"
                                data-bs-target="#order-<%=order.id%>"
                                style="color: var(--topicColor); text-align: center;"
                            >
                                Xem
                            </div>
    
                            <!-- Modal -->
                            <div
                                class="modal fade"
                                id="order-<%=order.id%>"
                                tabindex="-1"
                                aria-labelledby="exampleModalLabel"
                                aria-hidden="true"
                                style="margin-top: 80px; text-align: left;"
                            >
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5
                                                class="modal-title"
                                                id="exampleModalLabel"
                                            >
                                                Ghi chú
                                            </h5>
                                            <button
                                                type="button"
                                                class="btn-close"
                                                data-bs-dismiss="modal"
                                                aria-label="Close"
                                            ></button>
                                        </div>
                                        <div class="modal-body" style="color: #000;">
                                            <%=order.note%>
                                        </div>
                                        <div class="modal-footer">
                                            <button
                                                type="button"
                                                class="btn"
                                                style="background-color: var(--topicColor); color: #fff;"
                                                data-bs-dismiss="modal"
                                            >
                                                OKE
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div><%}%>
                        </td>
                        <td style="color: #fff;"><%= order.createdAt.toLocaleString() %></td>
                        <td class="delete-order">
                            <i
                                title="move to trash"
                                class="fa-solid fa-trash"
                                onClick="handleDelete('<%=order.id%>', '<%= orders.indexOf(order) + 1 %>')"
                            ></i>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
            <%if(orders.length===0) {%>
            <p style="width: 100%; text-align: center; color: rgb(223, 223, 223);">CHƯA CÓ ĐƠN ĐẶT HÀNG NÀO.</p>
            <%}%>
        </div>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"
        ></script>
        <script>
            const handleDelete = (id, index) => {
                Swal.fire({
                    title: 'Bạn có muốn',
                    text: `Chuyển đơn STT ${index} vào thùng rác?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'OK',
                    reverseButtons: true,
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/orders/trash/${id}`, {
                            method: 'DELETE',
                        })
                            .then(() => {
                                const orderDeleted =
                                    document.getElementById(id);
                                orderDeleted.remove();
                            })
                            .catch((err) => {
                                // alert('Không thể xóa!!');
                                Swal.fire({
                                    title: 'Lỗi!',
                                    text: 'Không thể chuyển đơn vào thùng rác!',
                                    icon: 'error',
                                    confirmButtonText: 'OK',
                                });
                            });
                        Swal.fire(
                            'Đã chuyển!',
                            'Chuyển đơn hàng vào thùng rác thành công',
                            'success'
                        );
                    }
                });
            };
        </script>
    </body>
</html>
