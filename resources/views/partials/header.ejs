<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/font-awesome6.1.1.min.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
      integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- bootstrap -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/base.css" />
    <link
      rel="icon"
      href="/images/favicon_io/favicon.ico"
      type="image/x-icon"
    />
    <script
      src="https://kit.fontawesome.com/92599c8cb3.js"
      crossorigin="anonymous"
    ></script>

    <style>
      /* Hide scrollbar for Chrome, Safari and Opera */
      body::-webkit-scrollbar {
        display: none;
      }
      /* Hide scrollbar for IE, Edge and Firefox */
      body {
        -ms-overflow-style: none; /* IE and Edge */
        scrollbar-width: none; /* Firefox */
      }
      .header-user-fullname:hover {
        cursor: pointer;
        opacity: 0.8;
      }
      .modal table {
        width: 100%;
      }
      .modal table input[type='text'],
      .modal table input[type='password'] {
        width: 100%;
        padding: 4px 8px;
      }

      .modal table td {
        padding: 10px;
      }
      .reset-pw-btn {
        width: 100%;
        padding: 4px;
        background-color: var(--topicColor);
        color: #fff;
        border-color: none;
        text-align: center;
        border-radius: 2px;
      }
      .reset-pw-btn:hover {
        cursor: pointer;
        opacity: 0.9;
      }
      .username-input:hover {
        cursor: not-allowed;
      }
    </style>
    <title>Tra Sữa BOBO</title>
  </head>
  <body>
    <header class="header">
      <div class="header-nav" id="Myheader">
        <div class="header_nav head-bn tb">
          <div class="header_nav_share">
            <div class="img">
              <a href="/">
                <img style="margin-left: 22px" src="/images/test1.png" alt="" />
              </a>
            </div>
            <div class="menu-header">
              <ul class="menu_ul">
                <li><a href="/">TRANG CHỦ</a></li>
                <li>
                  <a href="/introduce">GIỚI THIỆU</a>
                </li>
                <li><a href="/products">SẢN PHẨM</a></li>
                <li>
                  <a href="/news">TIN TỨC</a>
                </li>
                <li><a href="/stores">CỬA HÀNG</a></li>
                <li><a href="/recruitment">TUYỂN DỤNG</a></li>
                <li><a href="/franchise">NHƯỢNG QUYỀN</a></li>
              </ul>
            </div>
            <div class="search">
              <i class="fas fa-search search_nt"></i>
            </div>

            <%if(userFName) {%> <%if(userRole==='admin') {%>
            <div class="header-admin-list">
              <div class="header-admin-list-text">QUẢN LÝ</div>

              <div class="header-admin-list-child">
                <a href="/users/admin">
                  <div class="header-admin-list-child-link">
                    DANH SÁCH NGƯỜI DÙNG
                  </div>
                </a>
                <hr style="width: 100%" />
                <a href="/orders/admin">
                  <div class="header-admin-list-child-link">
                    DANH SÁCH ĐƠN HÀNG
                  </div>
                </a>
                <hr style="width: 100%" />
                <a href="/products/admin">
                  <div class="header-admin-list-child-link">
                    DANH SÁCH SẢN PHẨM
                  </div>
                </a>
              </div>
            </div>

            <%}%> <%if(userRole==='user') {%>

            <a class="header-order" href="/orders/<%=userId%>">
              <div>ĐƠN HÀNG</div>
            </a>

            <%}%>
            <div class="header-user">
              <div
                class="header-user-fullname"
                data-bs-toggle="modal"
                data-bs-target="#userInfo"
              >
                <%=userFName%>
              </div>

              <div class="header-logout">
                <a href="/auth/logout"
                  ><i class="fa-solid fa-right-from-bracket"></i
                ></a>
              </div>
            </div>
            <%}%> <%if(!userFName) {%>
            <div class="header-auth">
              <a href="auth/register" style="padding: 0 20px"> ĐĂNG KÝ </a>
              <a
                href="auth/login"
                style="padding: 0 20px; border-left: 1px solid white"
              >
                ĐĂNG NHẬP
              </a>
            </div>
            <%}%>
          </div>
        </div>
      </div>
    </header>
    <!-- Modal -->
    <div
      class="modal fade"
      id="userInfo"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
      style="margin-top: 80px; text-align: left"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">
              Thông tin tài khoản
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body" style="color: #000">
            <table>
              <tbody>
                <tr>
                  <td>Tên đăng nhập:</td>
                  <td>
                    <input
                      class="username-input"
                      type="text"
                      disabled
                      value="<%=user?.username%>"
                    />
                  </td>
                </tr>
                <tr>
                  <td>Mật khẩu:</td>
                  <td>
                    <div
                      data-bs-toggle="modal"
                      data-bs-target="#changePassword"
                      class="reset-pw-btn"
                    >
                      Đặt lại mật khẩu
                    </div>
                  </td>
                </tr>
                <tr>
                  <td>Họ tên:</td>
                  <td><input type="text" value="<%=user?.full_name%>" /></td>
                </tr>
                <tr>
                  <td>Số điện thoại:</td>
                  <td><input type="text" value="<%=user?.phone_number%>" /></td>
                </tr>
                <tr>
                  <td>Email:</td>
                  <td><input type="text" value="<%=user?.email%>" /></td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn"
              style="background-color: var(--topicColor); color: #fff"
              data-bs-dismiss="modal"
            >
              Lưu
            </button>
          </div>
        </div>
      </div>
    </div>
    <div
      class="modal fade"
      id="changePassword"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
      style="padding-top: 140px; text-align: left"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Đặt lại mật khẩu</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body" style="color: #000">
            <table>
              <tbody>
                <tr>
                  <td>Mật khẩu cũ:</td>
                  <td><input type="password" /></td>
                </tr>
                <tr>
                  <td>Mật khẩu mới:</td>
                  <td><input type="password" /></td>
                </tr>
                <tr>
                  <td>Nhập lại mật khẩu mới:</td>
                  <td><input type="password" /></td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn"
              style="background-color: var(--topicColor); color: #fff"
              data-bs-dismiss="modal"
            >
              Lưu
            </button>
          </div>
        </div>
      </div>
    </div>

    <script>
      window.onscroll = function () {
        // console.info(document.documentElement.scrollTop);
        var header = document.getElementById('Myheader');
        if (
          document.documentElement.scrollTop > 100 ||
          document.body.scrollTop > 100
        ) {
          header.style.position = 'fixed';
          header.style.left = 0;
          header.style.right = 0;
          header.style.background = 'rgb(69,59,59)';
          header.style.zIndex = 9;
        } else {
          // header.style.position = "relative";
          header.style.backgroundColor = 'rgb(0,0,0,0)';
        }
      };
    </script>
  </body>
</html>
