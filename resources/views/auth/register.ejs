<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/font-awesome6.1.1.min.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
      integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      rel="icon"
      href="/images/favicon_io/favicon.ico"
      type="image/x-icon"
    />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/backToTop.css" />
    <!-- mũi tên -->
    <link rel="stylesheet" href="/css/fontAwesome5Pro.css" />
    <!-- căn chỉnh -->
    <link rel="stylesheet" href="/css/default.css" />
    <!-- css tổng -->
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/base.css" />
    <title>Đăng Ký</title>
    <style>
      /* Hide scrollbar for Chrome, Safari and Opera */
      ::-webkit-scrollbar {
        display: none;
      }
      /* Hide scrollbar for IE, Edge and Firefox */
      body {
        -ms-overflow-style: none; /* IE and Edge */
        scrollbar-width: none; /* Firefox */
      }
      .form-loader {
        /* background-color: black; */
        margin: auto;
        width: 20px;
        height: 20px;
        border: 5px solid rgba(255, 255, 255, 0.055);
        border-top: 5px solid rgb(255, 255, 255);
        border-bottom: 5px solid rgb(255, 255, 255);
        border-radius: 100%;
        animation: roll 2s linear infinite;
      }

      @keyframes roll {
        100% {
          transform: rotate(360deg);
        }
      }
    </style>
  </head>
  <body>
    <main>
      <!-- sign up area start -->
      <section class="signup__area po-rel-z1" style="position: relative">
        <div
          class="darklayout"
          style="
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background-color: rgba(0, 0, 0, 0.644);
            z-index: -1;
          "
        ></div>
        <img
          src="/images/authbg.jpeg"
          style="
            position: absolute;
            top: 0;
            right: 0;
            left: 0;
            object-fit: cover;
            z-index: -2;
            height: 870px;
          "
          alt=""
        />
        <div class="container">
          <div class="row">
            <div
              class="col-xxl-6 offset-xxl-3 col-xl-6 offset-xl-3 col-lg-8 offset-lg-2"
            >
              <div class="sign__wrapper white-bg" style="padding-top: 20px">
                <div
                  class="sign__header"
                  style="display: flex; justify-content: center"
                >
                  <!-- <h1 style="text-align: center">Đăng Ký</h1> -->
                  <div class="logo" style="width: 200px">
                    <a href="/">
                      <img
                        src="/images/test2.png"
                        alt="logo"
                        style="object-fit: cover; width: 100%"
                      />
                    </a>
                  </div>
                </div>
                <div class="sign__form">
                  <form
                    id="register-form"
                    method="POST"
                    action="/auth/register"
                  >
                    <div class="sign__input-wrapper mb-10">
                      <h5>Họ và tên</h5>
                      <div class="sign__input">
                        <input
                          type="text"
                          name="full_name"
                          placeholder="Họ tên"
                          required
                        />
                        <i class="fa-solid fa-envelope"></i>
                      </div>
                    </div>
                    <div class="sign__input-wrapper mb-10">
                      <h5>Email</h5>
                      <div class="sign__input">
                        <input
                          name="email"
                          type="email"
                          placeholder="Email"
                          required
                        />
                        <i class="fa-solid fa-lock"></i>
                      </div>
                    </div>
                    <div class="sign__input-wrapper mb-10">
                      <h5>Số điện thoại</h5>
                      <div class="sign__input">
                        <input
                          name="phone_number"
                          type="text"
                          placeholder="Số điện thoại"
                          required
                        />
                        <i class="fa-solid fa-lock"></i>
                      </div>
                    </div>
                    <div class="sign__input-wrapper mb-10">
                      <h5>Tên đăng nhập</h5>
                      <div class="sign__input">
                        <input
                          name="username"
                          type="text"
                          placeholder="Tên đăng nhập"
                          required
                        />
                        <i class="fa-solid fa-lock"></i>
                      </div>
                    </div>
                    <div class="sign__input-wrapper mb-10">
                      <h5>Nhập mật khẩu</h5>
                      <div class="sign__input">
                        <input
                          name="password"
                          type="password"
                          placeholder="Mật khẩu"
                          required
                        />
                        <i class="fa-solid fa-lock"></i>
                      </div>
                    </div>
                    <div class="sign__input-wrapper mb-10">
                      <h5>Nhập lại mật khẩu</h5>
                      <div class="sign__input">
                        <input
                          name="cfpassword"
                          type="password"
                          placeholder="Xác nhận mật khẩu"
                          required
                        />
                        <i class="fa-solid fa-lock"></i>
                      </div>
                    </div>
                    <div
                      class="sign__action d-sm-flex justify-content-between mb-10"
                    ></div>
                    <button type="submit" class="e-btn w-100">Đăng Ký</button>
                    <div class="sign__new text-center mt-20">
                      <p>
                        Bạn có tài khoản?
                        <a href="/auth/login" style="color: var(--topicColor)"
                          >Đăng Nhập</a
                        >
                      </p>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- sign up area end -->
    </main>
    <%-include('../partials/link_js.ejs')%>
    <script>
      $(document).ready(function () {
        $('input[name="phone_number"]').on('keyup', function (e) {
          if (e.which >= 37 && e.which <= 40) {
            e.preventDefault();
          }

          $(this).val(function (index, value) {
            return value.replace(/\D/g, '');
          });
        });
        const registerForm = $('#register-form');
        registerForm.on('submit', async (e) => {
          e.preventDefault();
          $('#register-form button[type="submit"]').html(
            '<div class="form-loader"></div>'
          );
          const formRegister = registerForm.serializeArray();
          const registerData = {};
          formRegister.forEach((field) => {
            registerData[field.name] = field.value;
          });
          try {
            const res = await (
              await fetch('/auth/register', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify(registerData),
              })
            ).json();
            if (res.msg) {
              const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 4000,
                timerProgressBar: true,
                didOpen: (toast) => {
                  toast.addEventListener('mouseenter', Swal.stopTimer);
                  toast.addEventListener('mouseleave', Swal.resumeTimer);
                },
              });

              Toast.fire({
                icon: 'error',
                text: res.msg,
              });
              $('#register-form button[type="submit"]').text('Đăng ký');
            } else {
              const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 2000,
                timerProgressBar: true,
                didOpen: (toast) => {
                  toast.addEventListener('mouseenter', Swal.stopTimer);
                  toast.addEventListener('mouseleave', Swal.resumeTimer);
                },
              });

              Toast.fire({
                icon: 'success',
                text: 'Tạo tài khoản thành công',
              });
              setTimeout(() => {
                window.location.href = '/auth/login';
              }, 2000);
            }
          } catch (err) {
            const Toast = Swal.mixin({
              toast: true,
              position: 'top-end',
              showConfirmButton: false,
              timer: 3000,
              timerProgressBar: true,
              didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer);
                toast.addEventListener('mouseleave', Swal.resumeTimer);
              },
            });

            Toast.fire({
              icon: 'error',
              text: err,
            });
            $('#register-form button[type="submit"]').text('Đăng ký');
          }
        });
      });
    </script>
  </body>
</html>
